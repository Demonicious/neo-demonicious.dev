{
  "private": true,
  "license": "UNLICENSED",
  "author": "Ross Hill <ross@rosshill.ca> (https://rosshill.ca)",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "svelte-kit dev",
    "getIcons": "wireit",
    "getPosts": "markdown-json -c content/.mdconfig.json",
    "getWebp": "node --loader ts-node/esm ./scripts/getWebp.ts",
    "lint": "eslint . --ignore-path .gitignore",
    "preview": "svelte-kit preview",
    "deleteTestBuild": "rm -rf tests/build",
    "deleteTestResults": "rm -rf tests/test-results",
    "compileTestTypescript": "tsc --incremental -p tests/tsconfig.json",
    "test": "wireit",
    "upgrade": "ncu -u && ncu -u --target newest --filter \"@sveltejs/adapter-netlify @sveltejs/kit\" && npm i",
    "writeNodeVersion": "node --loader ts-node/esm ./scripts/writeNodeVersion.ts"
  },
  "wireit": {
    "getIcons": {
      "command": "node --loader ts-node/esm ./scripts/getIcons.ts",
      "dependencies": [
        "getPosts"
      ]
    },
    "build": {
      "command": "svelte-kit build",
      "dependencies": [
        "writeNodeVersion",
        "getIcons",
        "getWebp"
      ]
    },
    "test": {
      "command": "cd tests && playwright test",
      "dependencies": [
        "deleteTestBuild",
        "deleteTestResults",
        "compileTestTypescript"
      ]
    }
  },
  "browserslist": "last 5 years or ie>=11 or >0.2%",
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@iconify/json": "^2.1.59",
    "@playwright/test": "^1.22.2",
    "@sveltejs/adapter-netlify": "^1.0.0-next.64",
    "@sveltejs/kit": "1.0.0-next.350",
    "@types/chroma-js": "^2.1.3",
    "@types/cssnano": "^5.0.0",
    "@types/dateformat": "^5.0.0",
    "@types/imagemin": "^8.0.0",
    "@types/imagemin-webp": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "autoprefixer": "^10.4.7",
    "chroma-js": "^2.4.2",
    "cssnano": "^5.1.11",
    "date-fns": "^2.28.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "hsluv-sass": "^2.0.1",
    "hsluv-ts": "^1.0.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "isbot": "^3.5.0",
    "markdown-json": "^1.6.1",
    "sass": "^1.52.3",
    "simple-icons": "^7.0.0",
    "slugify": "^1.6.5",
    "svelte": "3.48.0",
    "svelte-check": "^2.7.2",
    "svelte-meta-tags": "^2.6.1",
    "svelte-preprocess": "^4.10.7",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3",
    "universal-cookie": "^4.0.4",
    "unplugin-icons": "^0.14.3",
    "vite": "2.9.12",
    "wireit": "^0.5.0"
  },
  "engines": {
    "node": ">= 16.13.2"
  }
}
